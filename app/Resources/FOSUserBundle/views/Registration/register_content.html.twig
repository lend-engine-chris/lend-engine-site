<div class="row">
    <div class="col-md-12">
        <form action="{{ path('fos_user_registration_register') }}" method="POST" class="fos_user_registration_register">

            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="row">

                <div class="col-md-4" id="col-personal">
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.email) }}
                </div>

                <div class="col-md-4" id="col-address">
                    {{ form_row(form.countryIsoCode) }}
                </div>

                <div class="col-md-4" id="col-password">
                    {{ form_row(form.plainPassword) }}

                    <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary btn-block btn-flat pull-right" />

                </div>

            </div>

            {{ form_end(form) }}

        </form>
    </div>
</div>

{% block pagejs %}{% endblock %}


