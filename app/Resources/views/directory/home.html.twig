{% extends 'directory.html.twig' %}

{% block title %}A directory of lending organisations{% endblock %}

{% block head %}
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDgbkO6VOtnvsh1aqEExrv6HSQzSDsO2Ik"></script>
    <script type="text/javascript">

        function loadMap() {
            var geocoder = new google.maps.Geocoder();
            var map;
            geocoder.geocode({'address': '{{ map_home }}'}, function(results, status)
            {
                if (status == google.maps.GeocoderStatus.OK) {
                    var _position = { lat: results[0].geometry.location.lat(), lng: results[0].geometry.location.lng()};
                    var mapOptions = {
                        zoom: {{ map_zoom }},
                        center: _position
                    };
                    map = new google.maps.Map(document.getElementById('map'), mapOptions);
                    {% for l in libraries %}
                        addMarker(map, "{{ l.name }}", "{{ l.website }}", {{ l.lat }}, {{ l.long }});
                    {% endfor %}
                } else {
                    console.log(status);
                }
            });
        }

        function addMarker(map, name, website, lat, long) {
            var marker;
            var position = {lat: lat, lng: long};

            var contentString = '<h4 id="firstHeading" class="firstHeading">'+name+'</h4>'+
            '<div id="bodyContent">'+
            '<p>Description</p>'+
            '<p><a href="'+website+'" target="_blank">'+website+'</a> '+
            '</p>'+
            '</div>';

            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });

            marker = new google.maps.Marker({
                position: position,
                map: map,
                title: title
            });

            marker.addListener('click', function() {
                infowindow.open(map, marker);
            });
        }

        window.onload = function() {
            loadMap();
        }
    </script>
{% endblock %}

