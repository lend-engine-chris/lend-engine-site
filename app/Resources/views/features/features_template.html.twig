{% extends 'base.html.twig' %}

{% block title %}Introduction{% endblock %}

{% block body %}

<section id="feature-heading">
    <div class="container">
        <h2>Features &raquo; {% block breadcrumb %}{% endblock %}</h2>
    </div>
</section>

{% if app.request.get('_route_params') %}
    {% set slug = app.request.get('_route_params').slug %}
{% else %}
    {% set slug = 'none' %}
{% endif %}

<section id="feature1">
    <div class="container">
        <div class="row" style="text-align:left">
            <div class="col-md-3" style="padding-top:40px;">
                <ul class="nav nav-pills nav-stacked" id="docs-nav">
                    <li><a href="{{ path('features', {slug: "loans"}) }}" class="{% if slug == 'loans' %}active{% endif %}">Loans & rentals</a></li>
                    <li><a href="{{ path('features', {slug: "items"}) }}" class="{% if slug == 'items' %}active{% endif %}">Item management</a></li>
                    <li><a href="{{ path('features', {slug: "asset_management"}) }}" class="{% if slug == 'asset_management' %}active{% endif %}">Asset tracking</a></li>
                    <li><a href="{{ path('features', {slug: "automation"}) }}" class="{% if slug == 'automation' %}active{% endif %}">Automation</a></li>
                    <li><a href="{{ path('features', {slug: "barcode_tracking"}) }}" class="{% if slug == 'barcode_tracking' %}active{% endif %}">Barcodes & labels</a></li>
                    {#<li><a href="{{ path('features', {slug: "rentals"}) }}" class="{% if slug == 'rentals' %}active{% endif %}">Rental management</a></li>#}
                    <li><a href="{{ path('features', {slug: "members"}) }}" class="{% if slug == 'members' %}active{% endif %}">Memberships</a></li>
                    <li><a href="{{ path('features', {slug: "payments"}) }}" class="{% if slug == 'payments' %}active{% endif %}">Payments &amp; Fees</a></li>
                    <li><a href="{{ path('features', {slug: "member_site"}) }}" class="{% if slug == 'member_site' %}active{% endif %}">Member site</a></li>
                    {#<li><a href="{{ path('features', {slug: "costs"}) }}" class="{% if slug == 'costs' %}active{% endif %}">Cost monitoring</a></li>#}
                    <li><a href="{{ path('features', {slug: "sites"}) }}" class="{% if slug == 'sites' %}active{% endif %}">Multi site & location</a></li>
                    <li><a href="{{ path('features', {slug: "languages"}) }}" class="{% if slug == 'languages' %}active{% endif %}">Languages</a></li>
                </ul>
            </div>
            <div class="col-md-9" id="docs-content">
                {% block featureContent %}content here{% endblock %}
            </div>
        </div>
    </div>
</section>
{% endblock %}